<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="prianicslovakia.robotcontroll.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="10dp">

        <Switch
            android:id="@+id/isOnFollow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sledovanie operátora" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nastavenia vzdialenosti od zeme po pás" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/legBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/legVIew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="0.5 m" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nastavenie vzdialenosti robota od operátora pri sledovaní" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/distanceBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:progress="30" />

            <TextView
                android:id="@+id/distanceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.14"
                android:text="1 m" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manuálne riadenie robota" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:gravity="center"
                    android:text="Button"
                    android:textSize="15pt"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/upButton"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:gravity="center"
                    android:text="↑"
                    android:textAlignment="center"
                    android:textSize="15pt" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:gravity="center"
                    android:text="Button"
                    android:textSize="15pt"
                    android:visibility="invisible" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center">

                <Button
                    android:id="@+id/leftBotton"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:text="↶"
                    android:textAlignment="center"
                    android:textSize="15pt" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:text="Button"
                    android:textSize="15pt"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/rightButton"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:text="↷"
                    android:textAlignment="center"
                    android:textSize="15pt" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center">

                <Button
                    android:id="@+id/button8"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:gravity="center"
                    android:text="Button"
                    android:textSize="15pt"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/downButton"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:gravity="center"
                    android:text="↓"
                    android:textAlignment="center"
                    android:textSize="15pt" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:gravity="center"
                    android:text="Button"
                    android:textSize="15pt"
                    android:visibility="invisible" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>
